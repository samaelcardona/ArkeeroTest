@model IEnumerable<ArkeeroTest.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Productos</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Crear Nuevo Producto</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.ProductId">Detalles</a>
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.ProductId">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ProductId">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
